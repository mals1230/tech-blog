<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{description}}</p>
  <p>Posted by {{user.name}} on {{format_date date_created}}</p>

  <p>
    <h3>Comments:</h3>
    {{#each comments as |comment|}}
    <span class="comments">{{comment.userComment}}</span>
    <p> Posted by {{comment.user.name}} on {{format_date comment.date_created}}</p>
    {{/each}}
  </p>

    <form class="form comment-form">
      <div class="form-group">
        <label for="comment">Add a Comment:</label>
        <input class="form-input" id="#post-comment" name="post-comment" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>

</div>
<script src="/js/posts.js"></script>